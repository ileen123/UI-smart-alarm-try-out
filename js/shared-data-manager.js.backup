    /**
     * Save patient medical information
     */
    /**
     * Initialize or update patient medical configuration and send delta message
     * Can be called from setup pages or when patient assignments change
     */
    updatePatientMedicalConfiguration(patientId, updates = {}) {
        try {
            // Get current medical info
            const currentMedicalInfo = this.getPatientMedicalInfo(patientId) || {};
            
            // Merge updates with current info
            const updatedMedicalInfo = {
                ...currentMedicalInfo,
                ...updates,
                lastUpdated: new Date().toISOString()
            };
            
            // Save and trigger delta message
            return this.savePatientMedicalInfo(patientId, updatedMedicalInfo);
        } catch (error) {
            console.error('‚ùå Error updating patient medical configuration:', error);
            return false;
        }
    }

    /**
     * Collect complete current medical configuration for a patient
     * Returns the full current state - no delta detection, just current values
     */
    collectCurrentMedicalConfiguration(patientId) {
        try {
            console.log(`ÔøΩ Collecting current medical configuration for patient ${patientId}`);
            
            const medicalInfo = this.getPatientMedicalInfo(patientId) || {};
            const bedStates = this.getBedStates() || {};
            
            // Find patient's bed number
            let bedNumber = null;
            for (const [bed, data] of Object.entries(bedStates)) {
                if (data.patientId === patientId) {
                    bedNumber = parseInt(bed);
                    break;
                }
            }
            
            // Get the current medical problem and risk level
            const medicalProblem = medicalInfo.selectedProblem || null;
            const selectedRiskLevel = medicalInfo.selectedRiskLevel || 'low';
            
            // Calculate current risk levels per organ system
            let riskLevels = { circulatoir: 'low', respiratoire: 'low' }; // Safe defaults
            if (medicalProblem && medicalProblem !== 'none') {
                const organStates = this.calculateAdvancedOrganStates(medicalProblem, selectedRiskLevel);
                riskLevels = {
                    circulatoir: organStates?.heart || 'low',
                    respiratoire: organStates?.lung || 'low'
                };
            }
            
            // Get current thresholds
            let thresholds = {
                HR: { min: 70, max: 100 },
                BP_Mean: { min: 60, max: 90 },
                AF: { min: 12, max: 20 },
                Saturatie: { min: 92, max: 100 },
                Temperature: { min: 36.0, max: 38.5 }
            }; // Safe defaults
            
            if (medicalProblem && medicalProblem !== 'none') {
                const matrixRanges = this.getMatrixBasedBaseRanges(medicalProblem, selectedRiskLevel);
                if (matrixRanges && Object.keys(matrixRanges).length > 0) {
                    thresholds = {
                        HR: matrixRanges.HR || thresholds.HR,
                        BP_Mean: matrixRanges.BP_Mean || thresholds.BP_Mean,
                        AF: matrixRanges.AF || thresholds.AF,
                        Saturatie: matrixRanges.Saturatie || thresholds.Saturatie,
                        Temperature: matrixRanges.Temperature || thresholds.Temperature
                    };
                }
            }
            
            const config = {
                patientId: patientId,
                bedNumber: bedNumber,
                medicalProblem: medicalProblem,
                riskLevels: riskLevels,
                thresholds: thresholds
            };
            
            console.log(`‚úÖ Current configuration for patient ${patientId}:`, config);
            return config;
        } catch (error) {
            console.error('‚ùå Error collecting current medical configuration:', error);
            return null;
        }
    }

    /**
     * Send complete thresholds_risk_levels message
     * Always sends the full current configuration - no delta detection
     */
    sendFullThresholdsRiskLevels(patientId) {
        console.log(`üì§ Sending full thresholds_risk_levels for patient ${patientId}`);
        
        const currentConfig = this.collectCurrentMedicalConfiguration(patientId);
        
        if (!currentConfig) {
            console.error('‚ùå Could not collect current configuration for patient:', patientId);
            return;
        }
        
        const messageData = {
            patientId: currentConfig.patientId,
            bedNumber: currentConfig.bedNumber,
            changeType: 'full_config',
            medicalProblem: currentConfig.medicalProblem,
            riskLevels: currentConfig.riskLevels,
            thresholds: currentConfig.thresholds
        };
        
        console.log(`üì§ Sending complete configuration:`, messageData);
        
